# travelers.ai API Configuration
# Copy this file to .env and fill in the values

# === REQUIRED ===

# Database connection string (PostgreSQL with PostGIS)
DATABASE_URL=postgresql+asyncpg://travelers:your_password@localhost:5432/travelers

# Secret key for JWT signing (minimum 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-minimum-32-characters-long

# === OPTIONAL ===

# App settings
DEBUG=false

# Redis URL for caching
REDIS_URL=redis://localhost:6379

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:19006

# LLM Provider: none, llama, openai, anthropic
LLM_PROVIDER=none

# LLM API Keys (required based on LLM_PROVIDER)
# LLAMA_MODEL_PATH=/path/to/model.gguf
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# External APIs (optional)
# GOOGLE_PLACES_API_KEY=AIza...
# OPENROUTE_API_KEY=...

# Omen AI Engine (real-time contextual insights)
OMEN_ENABLED=false
OMEN_WS_URL=ws://localhost:8100/ws
# OMEN_API_KEY=...

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
